#include <stdio.h>

int main() {
    int matriz[3][3]; // matriz 3x3
    int i, soma = 0; // variável para armazenar a soma

    // ler a matriz 3x3 do usuário
    printf("Digite a matriz 3x3:\n");
    for (i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            printf("Elemento [%d][%d]: ", i, j);
            scanf("%d", &matriz[i][j]);
        }
    }

    // calcular a soma dos elementos da diagonal principal
    for (i = 0; i < 3; i++) {
        soma += matriz[i][i];
    }

    // exibir a soma
    printf("A soma dos elementos da diagonal principal é: %d\n", soma);

    return 0;
}